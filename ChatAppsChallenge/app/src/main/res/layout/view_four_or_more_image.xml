<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/two_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_baseline_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_baseline_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_one"/>

        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_baseline_image"
            app:layout_constraintStart_toStartOf="@id/iv_one"
            app:layout_constraintTop_toBottomOf="@id/iv_one"/>

        <ImageView
            android:id="@+id/iv_four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_baseline_image"
            app:layout_constraintEnd_toEndOf="@id/iv_two"
            app:layout_constraintTop_toBottomOf="@id/iv_one"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#60000000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            tools:text="+5 more"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/iv_four"
            app:layout_constraintStart_toStartOf="@id/iv_four"
            app:layout_constraintBottom_toBottomOf="@id/iv_four"
            app:layout_constraintTop_toTopOf="@id/iv_four"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>